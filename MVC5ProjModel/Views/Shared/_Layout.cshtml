<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet"
          type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")"
            type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <h1><a href="/">ASP.NET MVC MUSIC STORE</a></h1>
        @*头部导航*@
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
            <li><a>Store</a></li>
            <li></li>@*购物车数量*@
            <li><a>Admin</a></li>
        </ul>
    </div>

    @*@{Html.RenderAction("GenreMenu", "Store");}*@@*左侧类型列表*@

    <div id="main">
        @RenderBody()@*本页面为布局页面，其实它的作用和母版页中的服务器控件类似，当创建基于此布局页面的视图时，视图的内容会和布局页面合并，而新创建视图的内容会通过布局页面的 @RenderBody()方法呈现在标签之间。*@
    </div>

    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 5</a>
    </div>
    <!--用于在App_Start/BundleConfig.cs中绑定系统所需的通用JS、Jquery脚本代码-->
    @Scripts.Render("~/bundles/jquery")
    <!--用于在App_Start/BundleConfig.cs中绑定系统所需的通用CSS-->
    @Styles.Render("~/Content/css")
    <!--用于绑定子页面中特有的css样式，占位符名字为css1--><!--required为true时，则所有子页面都必须要使用@section css1{<style>CSS code...</style>}这个占位符*-->
    @RenderSection("css", false)
    <!--用于绑定子页面中特有的脚本代码，占位符名字为script1--><!--required为true时，则所有子页面都必须要使用@section script1{<script>CSS code...</script>}这个占位符-->
    @RenderSection("script", false)
</body>
            </html>
